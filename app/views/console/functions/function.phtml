$patterns = [];

foreach ($events as $name => $event) {
    $patterns[] = $name;
    foreach ($event as $key => $value) {
        if (!\str_starts_with($key, '$')) {
            if (!($value['$resource'] ?? false)) {
                $patterns[] = "{$name}.{$key}";
            } else {
                $patterns[] = $key;
                foreach ($value as $key2 => $value2) {
                    if (!\str_starts_with($key2, '$')) {
                        if (!($value2['$resource'] ?? false)) {
                            $patterns[] = "{$key}.{$key2}";
                        }
                    }
                }
            }
        }
    }
}

